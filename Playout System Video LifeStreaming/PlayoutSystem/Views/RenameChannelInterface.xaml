<Window x:Class="PlayoutSystem.Views.RenameChannelInterface"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlayoutSystem.Views"
        mc:Ignorable="d"
        Title="Rename Channel" Height="200" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Channel Name" FontSize="20" Margin="0,10,0,0"/>
        <TextBox x:Name="channelName" Height="30" VerticalAlignment="Center" Margin="5,-10,5,0"/>
        <Button Height="25" Width="100" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,5,15" Content="OK" Click="OKButton_Click"/>
    </Grid>
</Window>
