<Window x:Class="PlayoutSystem.Views.DelayDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Edit Delay" Height="180" Width="350" WindowStartupLocation="CenterScreen">
    <Grid>
        <xctk:TimePicker x:Name="channel_DelayTime" Grid.Row="4" HorizontalAlignment="Left" Width="10" Height="5" VerticalAlignment="Top" Format="Custom" FormatString="HH:mm:ss" Margin="0,0,0,50" FontSize="24" TextAlignment="Center" Visibility="Hidden"/>
        <TextBox x:Name="secondTime" Width="50" Height="30" Margin="150,0,0,20" PreviewTextInput="NumberValidationTextBox"/>
        <TextBox x:Name="minuteTime" Width="50" Height="30" Margin="0,0,0,20" PreviewTextInput="NumberValidationTextBox"/>
        <TextBox x:Name="hourTime" Width="50" Height="30" Margin="0,0,150,20" PreviewTextInput="NumberValidationTextBox"/>
        <Label Content="Hours" Margin="0,0,150,90" Width="50" Height="30"/>
        <Label Content="Minutes" Margin="10,0,0,90" Width="70" Height="30"/>
        <Label Content="Seconds" Margin="190,0,0,90" Width="100" Height="30"/>
        <Button Content="OK" Click="OKButton_Click" Margin="111,95,117,20"  />
    </Grid>
</Window>
