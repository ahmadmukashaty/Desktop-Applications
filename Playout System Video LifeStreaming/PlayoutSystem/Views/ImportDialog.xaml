<Window x:Class="PlayoutSystem.Views.ImportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ImportDialog" Height="200" Width="500" ResizeMode="CanMinimize" 
        WindowStartupLocation="CenterScreen" Closing="onClosing" >
    <Grid> 
        <Label Content="Import License:" HorizontalAlignment="Left" Margin="23,19,0,0" VerticalAlignment="Top"
               RenderTransformOrigin="0.151,0.471"/>
        <TextBox x:Name="txtPath" IsReadOnly="True" HorizontalAlignment="Left" Height="33" Margin="23,50,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="336"/>
        <Button Content="Browse" HorizontalAlignment="Left" Margin="381,50,0,0" VerticalAlignment="Top" Width="63" Click="Import_Click" Height="33"/>
        <Button Content="Ok" Click="OKButton_Click" HorizontalAlignment="Left" Margin="182,110,0,0" VerticalAlignment="Top" Width="119" Height="31"/>

    </Grid>
</Window>
